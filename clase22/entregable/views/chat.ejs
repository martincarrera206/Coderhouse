<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    </head>
    <body>
        <%- include('./partials/header.ejs')  %>
        <div class="container">

            <form action="" class="mt-3">
                <h4>Login Chat</h4>
                <div class="form-group">
                    <div class="form-group row">
                        <label for="userNombre" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" name="userNombre" id="userNombre" class="form-control" placeholder="Ingrese su nombre...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userApellido" class="col-sm-2 col-form-label">Apellido</label>
                        <div class="col-sm-10">
                            <input type="text" name="userApellido" id="userApellido" class="form-control" placeholder="Ingrese su apellido...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" name="userEmail" id="userEmail" class="form-control" placeholder="Ingrese su email...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userEdad" class="col-sm-2 col-form-label">Edad</label>
                        <div class="col-sm-10">
                            <input type="number" name="userEdad" id="userEdad" class="form-control" placeholder="Ingrese su edad...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userAlias" class="col-sm-2 col-form-label">
                            Alias
                            <span class="text-muted">(optional)</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="userAlias" id="userAlias" class="form-control" placeholder="Ingrese su alias...">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userAvatar" class="col-sm-2 col-form-label">
                            Avatar <span class="text-muted">(optional)</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="userAvatar" id="userAvatar" class="form-control" placeholder="Ingrese una URL para su avatar....">
                        </div>
                    </div>
                    <button type="button" id="btnLoginUser" name="btnLoginUser" class="w-100 btn btn-success" >Ingresar a la Sala</button>
                </div>
            </form>
            
            <div class="chat-parent p-3 mt-3">

                <div class="chat-blur" id="blurChat"></div>

                <div class="row justify-content-center mt-3">
                    <div class="col-md-4 col-xl-3 chat">
                        <h4>Compresi&oacute;n: <span id="porc_compresion">0</span>% </h4>
                        <div class="card w-100 mb-sm-3 mb-md-0 contacts_card">
                            <div class="card-header">
                                <div class="input-group">
                                    <input type="text" placeholder="Buscar usuario..." name="" class="form-control search">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body contacts_body">
                                <ui class="contacts" id="usersList">
                                </ui>
                            </div>
                            <div class="card-footer"><span id="serverNotification"></span></div>
                        </div>
                    </div>
                    <div class="col-md-8 col-xl-9 chat">
                        <div class="card">
                            <div class="card-header msg_head">
                                <div class="d-flex bd-highlight" id="userHeader">
                                    <!-- INSERT LOGGED IN USER INFO -->
                                </div>
                                <span id="action_menu_btn"><i class="fas fa-sign-out"></i></span>
                            </div>
                            <div class="card-body msg_card_body" id="messagesContainer">
                                <!-- INSERT MESSAGES -->
                            </div>
                            <div class="card-footer">
                                <div class="input-group">
                                    <textarea name="messageInput" id="messageInput" class="form-control type_msg" placeholder="Type your message..."></textarea>
                                    <div class="input-group-append" id=" ">
                                        <span id="sendMessage" class="input-group-text send_btn"><i class="fas fa-location-arrow"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			
		</div>
        <%- include('./partials/footer.ejs')  %>
        <%- include('./partials/basejs.ejs')  %>
        <script src="assets/js/chat.js"></script>
    </body>
</html>